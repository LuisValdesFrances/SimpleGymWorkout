<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
        <TextView
            android:id="@+id/exerciseItemExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST EXERCISE"
            android:textSize="18sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/exerciseItemExercise"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@id/exerciseItemExercise">
                <ImageButton
                    android:id="@+id/exerciseItemExerciseDelete"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/red"
                    android:src="@drawable/ic_delete_24"/>
                <ImageButton
                    android:id="@+id/exerciseItemExerciseEdit"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:background="@color/orange"
                    android:src="@drawable/ic_edit_24"/>
                <!--android:background="@color/design_default_color_secondary_variant"-->
            </LinearLayout>
        </RelativeLayout>
        <!--REPETITIONS-->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/exerciseItemRepetitions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--LOAD REPETITIONS HERE-->
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>