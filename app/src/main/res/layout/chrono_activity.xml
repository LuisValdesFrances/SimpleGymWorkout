<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/chronoActivityExercise"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/purple_200"
        android:text="TEST GROUP"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:paddingHorizontal="10dp"
        android:gravity="center_vertical"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">
        <Chronometer
            android:id="@+id/chronoActivityChrono"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#000"
            android:gravity="center"
            android:textSize="100sp"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <!--android:layout_weight="1"-->
            <ImageButton
                android:id="@+id/chronoActivityStop"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/chrono_button"
                android:src="@drawable/ic_stop_24"/>
            <!--android:layout_weight="1"-->
            <ImageButton
                android:id="@+id/chronoActivityStart"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/chrono_button"
                android:src="@drawable/ic_play_24"/>
            <!--android:layout_weight="1"-->
            <ImageButton
                android:id="@+id/chronoActivityPause"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/chrono_button"
                android:src="@drawable/ic_pause_24"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--SERIES LABEL-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/kl"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_marginVertical="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/orange_dark"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/num"
                android:textSize="18sp"
                android:padding="5dp"
                android:layout_marginVertical="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/orange_dark"
                android:gravity="center"/>
        </LinearLayout>
        <!--SERIES-->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/chronoActivitySeries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--LOAD SERIES HERE-->
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-9871578065265688/4783296505">
        </com.google.android.gms.ads.AdView>
    </RelativeLayout>

</LinearLayout>